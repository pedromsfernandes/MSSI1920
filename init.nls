; populate cities with tucks
to populate
  ask patches
  [
    set plabel ""
  ]
  ask turtles
  [
    die
  ]
  repeat n-trucks [
    ask one-of patches with [pcolor = blue]
    [
      sprout 1
      [
        set color red
        set label-color black
        set origin patch-here
        set destination patch-here
        set departure-time random 50
        set is-moving false
        set k random-float 1 + 0.5
        set m random-float 1 + 0.5
        set platoonID 0
        set platoonDelay 0
        if display-departure-times
        [
          set label departure-time
        ]
        while [origin = destination]
          [ set destination one-of patches with [pcolor = blue] ]
        if display-labels
        [
          ask origin
          [
            set plabel "origin"
          ]
          ask destination
          [
            set plabel "destination"
          ]
        ]
      ]
    ]
  ]
  set tick-counter 0
  set cycle-counter 0
  set time-spent 0
  set fuel-spent 0
  set money-spent 0
  set is-platooning false
  set n-platoons 0
  set n-trucks-in-platoon 0
  reset-ticks
  find-shortest-path
end